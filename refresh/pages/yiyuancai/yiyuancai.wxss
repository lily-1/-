/* pages/shopcar/shopcar.wxss */
.shopcar_banner{
  width: 100%;
  height: 278rpx;
  position: relative;
}
.shopcar_banner image{
  display: block;
   width:750rpx;
  height: 278rpx;
}
.slide-image{
  width:750rpx;
  height: 278rpx;
}
.shopcar_banner .banner_pos{
  position: absolute;
  width: 86%;
  left: 7%;
  bottom: -120rpx;
  background-color:#fff;
  -moz-box-shadow: 0px 5px 10px #e0e0e0; /* 老的 Firefox */
  box-shadow: 0px 5px 10px #e0e0e0;
}
.shopcar_banner .banner_pos .all{
  padding: 20rpx 34rpx 0;
  font-size: 30rpx;
  color: #5d5d5d;
  line-height: 56rpx;
}
.shopcar_banner .banner_pos .ms{
  font-size: 18rpx;
  color: #939393;
  line-height: 37rpx;
  padding: 0 34rpx 20rpx;
}
.shopcar_banner .banner_pos .time{
  border-top: 1rpx solid #e4e4e4;
  padding: 20rpx 34rpx;
  font-size: 24rpx;
  color: #5d5d5d;
  line-height: 58rpx;
}

/*列表  */
.shopcar_list{
  margin: 150rpx 0 0;
}
.shopcar_list .shopcar_list_detail{
  float: left;
  width: 335rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color:#fff;
  -moz-box-shadow: 0px 5px 10px #e0e0e0; /* 老的 Firefox */
  box-shadow: 0px 5px 10px #e0e0e0;
  box-sizing: border-box;
}
.shopcar_list .shopcar_list_detail image{
  display: block;
  width: 335rpx;
  height: 221rpx;
}
.shopcar_list .shopcar_list_detail .detail_name{
  padding-left: 30rpx;
  font-size: 18rpx;
  color: #6a6a6a;
  line-height: 57rpx;
  padding-top: 15rpx;
}
.shopcar_list .shopcar_list_detail .detail_name1{
  padding-left: 30rpx;
  font-size: 24rpx;
  color: #fb3d3c;
  line-height: 57rpx;
  padding-bottom: 15rpx;
}
.fr{float: right ! important;}

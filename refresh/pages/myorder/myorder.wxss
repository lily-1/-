  font-size: 24rpx;
  line-height: 50rpx;
  color: #ffffff;
  background-color: #ff0000;
  padding: 0 10rpx;
  border-radius: 5rpx;
}
.order_time .btn_order1{
  background-color: #75be0d;
}

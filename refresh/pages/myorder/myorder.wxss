/*头部搜索  */
.seard{
  overflow: hidden;
  background-color: #75be0d;
  padding: 20rpx 30rpx;
}
.seard .header_sear{
  background-color: #ffffff;
  height: 51rpx;
  border-radius: 25.5rpx;
  position: relative;
  padding-right:8%;
}
.seard .header_sear input{
  font-size: 22rpx;
  color: #aeaeae;
  line-height:51prx; 
  padding: 0 4%;
}
.seard .header_sear image{
  position: absolute;
  right: 10rpx;
  top: 12rpx;
  width: 27rpx;
  height: 27rpx;
}

/*选项卡  */
.tab-h{width: 100%; box-sizing: border-box;overflow: hidden;line-height: 64rpx;background: #ffffff; font-size: 16px; white-space: nowrap;padding: 0 3%;border-bottom: 1px solid #F2F2F2;}
.tab-item{padding:20rpx 36rpx;display: inline-block;height: 64rpx;}
.tab-item.active{color: #75be0d;position: relative;border-bottom: 1px solid #75be0d;}
.item-ans{ width: 100%; padding: 30rpx;box-sizing: border-box;align-items: center;border-bottom: 1px solid #F2F2F2;}
.avatar{width: 126rpx;height: 100rpx;padding-right: 30rpx;float: left;}
.avatar .img{width: 126rpx;height: 100rpx;}
.expertInfo{font-size: 12px;color: #414141;margin-left: 150rpx;line-height: 50rpx;overflow: hidden;}
.expertInfo .name{font-size: 16px;color:#414141;margin-bottom: 6px;}
.askBtn{ width: 60rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 48rpx; border-radius: 60rpx;color:#ffffff;background-color: #ff1919;}
.scoll-h{height: 100%;overflow-y: scroll;}
.expertInfo .t1{background-color: #ff1919;color: #ffffff;padding: 0 5rpx;border-radius: 7rpx;}
.expertInfo .t2{text-decoration:line-through;color: #414141}
.answerHistory{color: #ff0000;}
.item-anl{width: 20%;overflow-y: scroll;height: 97%;background-color: #eeeeee;position: fixed;left: 0;top: 29rpx;padding: 0 0 3% 0;}
.item-anl .item-anl_nr{position: relative;text-align: center;line-height: 60rpx;font-size: 30rpx;color: #010101;padding: 10rpx 0 10rpx 1%;}
.item-anl .active{background-color: #ffffff;color: #010101;border-left: 13rpx solid #75be0d;box-sizing: border-box;}
.order_time{
  font-size: 24rpx;
  line-height: 50rpx;
  color: #414141;
  width: 100%;
  display: block;
  margin-bottom: 10rpx;
}
.order_time .btn_order{
  float: right;
  height: 50rpx;

/*外部容器*/
page{
  background:#fff;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
/*复选框*/
.carts-footer icon {
  margin-top: 38rpx;
  display:block;
  float:left;
}
/*全选字样*/
.carts-footer text {
  font-size: 30rpx;
  margin-left: 8rpx;
  line-height:120rpx;
}
/*整体列表*/
.carts-list {
  display: flex;
  flex-direction: column;
  padding: 0rpx 0rpx 20rpx 0rpx;
  box-sizing:border-box;
  position:relative;
}

/*每行单元格*/
.carts-item {
  display: flex;
  flex-direction: row;
  height:260rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width:100%;
  padding: 30rpx 10rpx;
  box-sizing:border-box;
}

/*左部图片*/
.carts-image {
  width:200rpx;
  height:200rpx;
}
.deleteView{
  float: right;
  width: 40rpx;
  height: 40rpx;
}
.deleteimg{
  width: 40rpx;
  height: 40rpx;
}
/*右部描述*/
.carts-text {
  width: 100%;
  margin-left: 20rpx;
}

/*右上部分标题*/
.carts-title {
  overflow:hidden;
  color:#000000;
  font-size:34rpx;
  margin-bottom: 20rpx;
}

/*右下部分价格与数量*/
.carts-subtitle {
  font-size: 25rpx;
  color:darkgray;
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  line-height:26px;
}

/*价格*/
.carts-price {
  color: #4a4a4a;
  font-size:24rpx;
}
.stepper text,.stepper input{
  display:block;
  float:left;
  text-align:center;
}
.stepper text{
  width:26px;
  height:26px;
  color: #75be0d;
  font-weight: bold;
  font-size: 40rpx;
}
.stepper text.normal_select{
  text-align:center;
}
.stepper text.disabled{
  text-align:center;
  font-weight: bold;
  font-size: 40rpx;
}
.stepper text.select{
  text-align:center;
}
.stepper input{
  width:40px;
  height:26px;
  text-align:center;
  font-weight: bold;
  font-size: 32rpx;
}
/*复选框样式*/
.carts-item icon {
  margin-top: 60rpx;
  margin-right:20rpx;
}
.count_sum{
  width:100%;
  margin-bottom:132px;
}
/*底部按钮*/
.carts-footer {
  width: 80px;
  height: 120rpx;
  background:#fff;
  padding-left: 30rpx;
  float: left;
}

/*立即结算按钮*/
.carts-footer .button {
  /* margin-top:16rpx; */
  text-align: center;
  width:46rpx;
  height:36rpx;
  border-radius: 0;
  border: 0;
  background-position:center center;
  background-repeat:no-repeat;
  background-size:cover;
}
/*底部按钮*/
.carts-sum {
  width: 100%;
  height: 120rpx;
  position:fixed;
  bottom:0px;
  left:0px;
  background:#fff;
  z-index: 99;
  overflow: hidden;
}
.carts-sum1{
  width: 100%;
  height: 60rpx;
  position:fixed;
  left:0px;
  background:#fff;
  z-index: 99;
  bottom:65px;
  overflow: hidden;
}
.carts-sum1 .peis{
  float: left;
  width: 180rpx;
  height: 60rpx;
}
.carts-sum1 .peis1{
  float: left;
  line-height: 60rpx;
  font-size: 34rpx;
  color: #4a4a4a;
  margin-left: 10rpx;
}
.carts-sum1 .peis1 text{
  color: #ff0000;
}
.carts-sum1 .peis2{
  float: right;
  line-height: 60rpx;
  font-size: 40rpx;
  color: #75be0d;
  margin-right: 30rpx;
}
.carts-item:last-child{
  border-bottom:1px dashed transparent;
}
/*立即结算按钮*/
.carts-sum .button {
  padding: 20rpx 0 10rpx;
  text-align: center;
  width:250rpx;
  height: 70rpx;
  background-color: #75be0d;
  color: white;
  font-size: 36rpx;
  border-radius: 0;
  border: 0;
  float: right;
}
.carts-sum .button text{
  display: block;
  font-size: 26rpx;
  color: #ffffff;
}
.sumText{
  display:block;
  line-height: 32rpx;
  font-size:32rpx;
  color: #000000;
  margin: 30rpx 0 10rpx;
}
.sumText1{
  display:block;
  font-size:24rpx;
  color: #585858;
}
.sumText .price{
}
.sumText .price text{
  color: #ff0000;
}
.sumAll{
  float: left;
  width: 300rpx;
  text-align: center;
}
.selectAll{
  line-height: 80rpx;
}


